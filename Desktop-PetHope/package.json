{
  "name": "pethope-desktop",
  "version": "1.0.0",
  "description": "Desktop app PetHope com Electron",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=5858",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac"
  },
  "keywords": [
    "electron",
    "pethope",
    "login"
  ],
  "author": "PetHope Team",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.pethope.desktop",
    "productName": "PetHope",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PetHope"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.lifestyle"
    }
  }
}
